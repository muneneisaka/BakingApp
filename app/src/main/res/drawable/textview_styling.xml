<?xml version="1.0" encoding="utf-8"?>

<!-- Learnt how to use the styling of textview from here
https://stackoverflow.com/questions/3496269/how-do-i-put-a-border-around-an-android-textview -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- View background color -->
    <solid android:color="#4fa5d5"></solid>

    <!-- View border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimaryDark"></stroke>

    <!-- The radius makes the corners rounded -->
    <corners android:radius="10dp"></corners>

</shape>